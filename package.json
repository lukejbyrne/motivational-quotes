{
  "name": "motivational-quotes",
  "version": "1.0.0",
  "description": "A motivational quote website with inspiring quotes, search functionality, and social sharing",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "test": "jest",
    "lint": "eslint .",
    "build": "npm run build:css && npm run build:db",
    "build:css": "postcss public/css/styles.css -o public/css/styles.min.css --verbose",
    "build:db": "node server/config/seed.js",
    "vercel-build": "npm run build"
  },
  "keywords": ["motivational", "quotes", "inspiration", "web", "api"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0"
  }
}